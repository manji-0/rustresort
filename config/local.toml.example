# Local development configuration
# Copy this to config/local.toml and customize

[server]
# host = "127.0.0.1"
# port = 3000
# domain = "localhost"
# protocol = "http"

[database]
# path = "data/rustresort.db"

[database.sync]
# mode = "none"                  # none | turso | d1
# interval_seconds = 300

[database.sync.turso]
# remote_url = "libsql://your-db.turso.io"
# auth_token = "your-turso-auth-token"

[database.sync.d1]
# database = "your-d1-database-name"
# Requires local CLI tools in PATH: `sqlite3`, `sqldiff`, and `wrangler`.
# remote = false
# wrangler_config = "wrangler.toml"
# snapshot_path = "data/rustresort.d1-sync-snapshot.db"
# history_retention_count = 10000  # set 0 to disable pruning

[storage]
[storage.media]
# For local development with MinIO
# bucket = "rustresort-media"
# public_url = "http://localhost:9000/rustresort-media"

[storage.backup]
# enabled = false
# bucket = "rustresort-backup"
# interval_seconds = 86400
# retention_count = 7

[storage.backup.encryption]
# enabled = false
# Base64-encoded 32-byte AES-256-GCM key
# key = "base64-encoded-32-byte-key"

[cloudflare]
# For local development with MinIO, use these settings:
# account_id = "minioadmin"
# r2_access_key_id = "minioadmin"
# r2_secret_access_key = "minioadmin"

[auth]
# github_client_id = "your-github-client-id"
# github_client_secret = "your-github-client-secret"
# github_allowed_username = "your-github-username"
# session_secret = "dev-secret-key-change-in-production"

[instance]
# title = "RustResort Dev"
# description = "Development instance"
# contact_email = "dev@example.com"

[admin]
# Admin user configuration (single-user instance)
# username = "admin"
# display_name = "Admin"
# email = "admin@example.com"  # Falls back to instance.contact_email if not set
# note = "Instance administrator"

[cache]
# timeline_max_items = 2000

[logging]
# level = "debug"
# format = "pretty"
